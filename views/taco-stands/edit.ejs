<%- include('../partials/header.ejs') %>

<form action="/taco-stands/<%= stand._id %>?_method=PUT" method="POST">
  
  <label for="name">Name: </label>
  <input type="text" name="name" id="name" value="<%=stand.name%>">

  <label for="rating">Rating (0-5): </label>
  <input type="text" name="rating" id="rating" value="<%=stand.rating%>">

  <label for="city">City: </label>
  <input type="text" name="city" id="city" value="<%=stand.city%>">

  <label for="price">Price ($-$$$): </label>
  <input type="text" name="price" id="price" value="<%= stand.price %>">

  <label for="day">Days Open: </label>
  <input type="text" name="day" id="day" value="<%= stand.day %>">

  <label for="hour">Hours Open: </label>
  <input type="text" name="hour" id="hour" value="<%= stand.hour %>">

  <button type="submit">Update Taco Stand</button>

</form>


<%- include('../partials/footer.ejs') %>