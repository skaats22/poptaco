<%- include('./partials/header.ejs') %>

<link rel="stylesheet" href="/css/home.css">

<div class="container">
  <a href="/taco-stands" id="vat"><button>View all Taco Stands</button></a>
  <img src="/assets/images/logo.jpg" alt="PopTaco's logo of a taco" id="logo">
  <!-- Above renders whether signed in or not -->
  <% if (!user) { %>
    <div>
      <a href="/auth/sign-up"><button class="login">Sign Up!</button></a>
      <a href="/auth/sign-in"><button class="login">Log In</button></a>
    </div>
  <% } else { %>
    <div>
      <a href="/users"><button class="login">Our Community</button></a>
    </div>
  <% } %>
  
  <p id="tagline">Savor authentic tacos while supporting your community!</p>
</div>

